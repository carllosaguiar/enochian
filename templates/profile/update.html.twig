{% extends 'base.html.twig' %}

{% block title %} Enochian | Update Profile{% endblock %}

{% block body %}
    <div class="container">
        <div class="main-body">
            <div class="row gutters-sm">
                <div class="col-md-12 mb-3">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            {% if userProfile is empty %}
                                <img src="{{asset('images/avatar.jpg')}}" alt="Avatar" class="rounded-circle" width="180">
                            {% else %}
                                <img src="{{ asset(userProfile.image) }}" alt="Avatar" class="rounded-circle" style="height: 180px; width: 180px" width="180"/>
                                <div class="mt-3">
                                    <h4>{{ userProfile.name }}</h4>
                                    {% if userProfile.comment is not empty %}
                                        <p class="text-secondary mb-1">{{ userProfile.comment }}</p>
                                        <div class="mt-3">
                                            <img src="{{ userProfile.zodiac['signImg'] }}" alt="{{ userProfile.zodiac['sign'] }}">
                                        </div>
                                    {% endif %}
                                    <a href="{{ path('personal_cabala') }}" class="btn btn-outline-primary">Ver Cabala Pessoal</a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="mb-3">
                        <div class="card-body">
                            {{ form_start(form_profile, {'action': path('update', {id: userProfile.id}), 'method': 'POST'}) }}
                            <div class="alert alert-error">
                                {{ form_errors(form_profile) }}
                            </div>
                            <div class="mb-3">
                                {{ form_widget(form_profile) }}
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-outline-primary">Salvar</button>
                            </div>
                            {{ form_end(form_profile) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
