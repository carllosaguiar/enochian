{% extends 'base.html.twig' %}

{% block title %} Enochian | Profile {% endblock %}

{% block body %}
    <div class="container">
        <div class="main-body">
            <div class="row gutters-sm">
            <div class="col-md-12 mb-3">
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        {% if userProfile is empty %}
                            <img src="{{asset('images/avatar.jpg')}}" alt="Avatar" class="rounded-circle" width="180">
                        {% else %}
                        <img src="{{ asset(userProfile.image) }}" alt="Avatar" class="rounded-circle" style="height: 180px; width: 180px" width="180"/>
                        <div class="mt-3">
                            <h4>{{ userProfile.name }}</h4>
                            {% if userProfile.comment is not empty %}
                                <p class="text-secondary mb-1">{{ userProfile.comment }}</p>
                                <div class="mt-3">
                                    <img src="{{ userProfile.zodiac['signImg'] }}" alt="{{ userProfile.zodiac['sign'] }}">
                                </div>
                            {% endif %}
                            <a href="{{ path('personal_cabala') }}" class="btn btn-outline-primary">Ver Cabala Pessoal</a>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% if userProfile is empty %}
            <div class="col-md-12 mb-3">
                <div class="card mb-3">
                    {{ form_start(form_profile) }}
                        <div class="alert alert-error">
                            {{ form_errors(form_profile) }}
                        </div>
                        <div class="mb-3">
                            {{ form_widget(form_profile) }}
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-outline-primary">Enviar</button>
                        </div>
                    {{ form_end(form_profile) }}
                </div>
            </div>
            {% else %}
            <div class="col-md-12 mb-3">
                <div class="mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Nome Completo</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ userProfile.name }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ app.user.email }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ userProfile.phone }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Ocupação</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ userProfile.occupation }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Genero</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ userProfile.gender }}
                            </div>
                        </div>
                        {% if userProfile.zodiac is not empty %}
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Constelação</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ userProfile.zodiac['sign'] }}
                            </div>
                        </div>
                        {% endif %}
                    </div>
                    <div class="mb-3">
                        <a href="{{ path('update', {id: userProfile.id}) }}" type="button" class="btn btn-primary" style="float: right"><i class="bi bi-pencil"></i></a>
                    </div>
                </div>
            </div>
            {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
