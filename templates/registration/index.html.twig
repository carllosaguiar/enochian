{% extends 'base.html.twig' %}

{% block title %}Enochian | Register{% endblock %}
{% block body %}
<div class="container" style="width: 500px">
        {{ form_start(form) }}
        <div class="mb-3">
            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.password.first, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.password.second, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3 d-grid gap-2">
            <button type="submit" class="btn btn-outline-primary btn-sm">Enviar</button>
        </div>
        <div class="mb-3 d-grid gap-2">
            <a type="button" href="{{ path('app_login') }}" class="btn btn-outline-primary btn-sm">Retornar ao Login</a>
        </div>
        {{ form_end(form) }}
</div>
{% endblock %}