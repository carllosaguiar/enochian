{% extends 'base.html.twig' %}

{% block title %}Enochian | Register{% endblock %}
{% block body %}
<div class="custom-container container">
    <form style="width: 500px; padding-top: 50px">
        {{ form_start(form) }}
        <div class="mb-3">
            {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Seu nome'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Seu melhor email'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.password.first, {'attr': {'class':'form-control', 'placeholder': 'Senha'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.password.second, {'attr': {'class':'form-control', 'placeholder': 'Repita a senha'}}) }}
        </div>
        <div class="mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="disabledFieldsetCheck" disabled>
                <label class="form-check-label" for="disabledFieldsetCheck">
                    Can't check this
                </label>
            </div>
        </div>
        <div class="mb-3">
            <button type="button" class="btn btn-outline-primary">Enviar</button>
        </div>
        {{ form_end(form) }}
    </form>
</div>
{% endblock %}