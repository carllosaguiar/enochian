{% extends 'base.html.twig' %}

{% block title %}Enochian | Log in!{% endblock %}

{% block body %}
    <div class="bg-img"></div>
    <div class="login-container justify-content-center">
        <form class="form-horizontal col-md-2" role="form" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="mb-3">
                <label for="inputEmail">Email</label>
                <input id="inputEmail" type="email" class="form-control" name="email" value="{{ last_username }}" required autofocus>
                <div id="emailHelp" class="form-text">NÃ³s nunca compartilhamos seu email.</div>
            </div>
            <div class="mb-3">
                <label for="inputPassword">Senha</label>
                <input id="inputPassword" type="password" class="form-control" name="password" required>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button type="submit" class="btn btn-outline-primary btn-sm">Entrar</button>
        </form>
    </div>
{% endblock %}
