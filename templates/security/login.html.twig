{% extends 'base.html.twig' %}

{% block title %}Enochian | Log in!{% endblock %}

{% block body %}
    <div class="bg-img"></div>
    <div class="login-container justify-content-center">
        <form class="form-horizontal col-md-4" role="form" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="mb-3">
                <label for="inputEmail">Email</label>
                <input id="inputEmail" type="email" class="form-control" name="email" required autofocus>
                <div id="emailHelp" class="form-text">NÃ³s nunca compartilhamos seu email.</div>
            </div>
            <div class="mb-3">
                <label for="inputPassword">Senha</label>
                <input id="inputPassword" type="password" class="form-control" name="password" required>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="mt-3 d-grid gap-2" style="padding-bottom: 5px">
                <button type="submit" class="btn btn-outline-primary btn-sm">Login</button>
            </div>
            <div class="mb-3 d-grid gap-2">
                <a type="button" href="{{ path('registration') }}" class="btn btn-outline-primary btn-sm">New account</a>
            </div>
        </form>
    </div>
{% endblock %}
